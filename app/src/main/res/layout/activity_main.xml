<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rathana.recyclerviewdemo.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LinearLayout Manager"
        android:onClick="onShowLinearLayout"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GridLayout Manager"
        android:onClick="onShowGridLayout"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StaggeredLayout Manager"
        android:onClick="onShowStaggeredLayout"/>
</LinearLayout>
